@model ProyectoLogin.Models.Empleado
@{
    ViewData["Title"] = "Empleado";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/aff71718e3.js" crossorigin="anonymous"></script>
    <crossorigin ="anonymous">
        <script src="https://kit.fontawesome.com/aff71718e3.js" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css?family=Poppins:400,800,900" rel="stylesheet">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://kit.fontawesome.com/06f80f73dc.js" crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
        <script src="https://kit.fontawesome.com/cc69f106cf.js" crossorigin="anonymous"></script>
</head>
<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar</strong></h1>
            </div>

            <div class="card-body">

                <form asp-action="Editor" method="post">
                    @*                    Id Del usuario oculto*@
                    <input type="hidden" asp-for="IdEmpleado" />
                    <div class="form-group">
                        <label asp-for="NumEmpleado">NumEmpleado</label>
                        <input asp-for="NumEmpleado" class="form-control" placeholder="ingresar NumEmpleado" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="FechaIngreso">Descripcion</label>
                        <input asp-for="FechaIngreso" class="form-control" placeholder="ingresar FechaIngreso" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Estatus">Estatus</label>
                        <input asp-for="Estatus" class="form-check-label" placeholder="ingresar Estatus" >
                    </div>
                    <div class="container-fluid">
                        <button type="submit" class="btn btn-success"><i class="fa-solid fa-feather"></i> Editar</button>
                    </div>
                </form>
                <br />
                <div class="container-fluid">
                    <a class="btn btn-outline-success" asp-controller="Empleado" asp-action="Index"> Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
