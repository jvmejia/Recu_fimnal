@model ProyectoLogin.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro</title>
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-box">
        <h2>Registrarse</h2>
        <form asp-controller="Inicio" asp-action="Registrarse" method="post">
            <div class="user-box">
                <input type="text"  asp-for="NombreCompleto" required />
                <label>Nuevo Usuario</label>
            </div>
            <div class="user-box">
                <input  type="text" required asp-for="Correo" />
                <label>Ingresar Correo</label>
            </div>
            <div class="user-box">
                <input  type="password"  required asp-for="Clave" />
                <label>Crear contraseña</label>
            </div>
            <button class="transparent-button" type="submit">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Confirmar
            </button>
            @if (ViewData["Mensaje"] != null)
            {
                <div class="form-group">
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                </div>
            }
            <br>
            <br>
            <br>
            <p>¿Te encuentras registrado?</p><a href="@Url.Action("IniciarSesion","Inicio")"> Iniciar Sesion</a>
  </form>
</div>
</body>
</html>
